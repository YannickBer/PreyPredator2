<Window x:Class="PreyPredator2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PreyPredator2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />

            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0"
                    Margin="10">
            <Label x:Name="rondeLabel"
                   Content="Ronde: 0" />
            <Label x:Name="luisLabel"
                   Content="Aantal luizen: 0" />
            <Label x:Name="ladybugLabel"
                   Content="Aantal lieveheersbeestjes: 0" />
            <Button Content="Volgende ronde"
                    Click="VolgendeRonde_Click"
                    Margin="0,10,0,0" />
        </StackPanel>

        <Canvas x:Name="worldCanvas"
                Grid.Column="1"
                Margin="13,10,76,58" />

    </Grid>
</Window>
